@model School.Models.ViewModel.StudentViewModel  

@{  
   ViewData["Title"] = "Details";  
}  

<h1 class="text-primary">Details</h1>  

<div class="container mt-4">  
   <h4 class="text-secondary">Student</h4>  
   <hr />  
   <dl class="row bg-light p-3 rounded">  
       <dt class="col-sm-2 font-weight-bold">  
           @Html.DisplayNameFor(model => model.Student.FullName)  
       </dt>  
       <dd class="col-sm-10">  
           @Html.DisplayFor(model => model.Student.FullName)  
       </dd>  
       <dt class="col-sm-2 font-weight-bold">  
           @Html.DisplayNameFor(model => model.Student.Email)  
       </dt>  
       <dd class="col-sm-10">  
           @Html.DisplayFor(model => model.Student.Email)  
       </dd>  
       <dt class="col-sm-2 font-weight-bold">  
           @Html.DisplayNameFor(model => model.Student.Document)  
       </dt>  
       <dd class="col-sm-10">  
           @Html.DisplayFor(model => model.Student.Document)  
       </dd>  

       <dd class="col-sm-10">  
           <p class="font-weight-bold">  
               Courses:  
           </p>  
           @foreach(var course in Model.Student.CourseStudents){  
               <div class="pl-3">  
                  @Html.DisplayFor(Model => course.Course.Name)  
               </div>  
           }  
       </dd>  
   </dl>  
</div>  
<div class="mt-3">  
   <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model?.Student.Id">Edit</a>  
   <a class="btn btn-secondary" asp-action="Index">Back to List</a>  
</div>
