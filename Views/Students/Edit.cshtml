@model School.Models.ViewModel.StudentViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Student</h4>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Edit" class="d-flex flex-column gap-2">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Student.Id" />
            <div class="form-group">
                <label asp-for="SelectListCourses" class="control-label"></label>
                <select asp-for="SelectedCourse" class="form-select" asp-items="Model.SelectListCourses">
                    <option value="">Select a Course</option>
                </select>
                <span asp-validation-for="SelectedCourse" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Student.FullName" class="control-label"></label>
                <input asp-for="Student.FullName" class="form-control" />
                <span asp-validation-for="Student.FullName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Student.Email" class="control-label"></label>
                <input asp-for="Student.Email" class="form-control" />
                <span asp-validation-for="Student.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Student.Document" class="control-label"></label>
                <input asp-for="Student.Document" class="form-control" />
                <span asp-validation-for="Student.Document" class="text-danger"></span>
            </div>
            <div>
                <h3>Courses</h3>

                @foreach (var course in Model.Student.CourseStudents)
                {
                    <div class="badge bg-secondary">
                        @course.Course.Name - @course.Course.Credits
                    </div>
                }
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>

    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
